<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="@dimen/dimens_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_10"
        android:layout_marginBottom="@dimen/dimens_10"
        android:background="@color/cardview_light_background"
        android:orientation="vertical">


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_header_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/calibree_medium"
            android:gravity="center"
            android:lineSpacingExtra="5sp"
            android:padding="@dimen/dimens_5"
            android:text="@string/select_quantity"
            android:textColor="@color/md_black_1000"
            android:textSize="@dimen/dimens_12sp" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/calibree_bold"
            android:lineSpacingExtra="@dimen/dimens_5sp"
            android:padding="@dimen/dimens_5"
            android:text="@string/email"
            android:textColor="@color/md_pink_600"
            android:textSize="@dimen/dimens_11sp" />

        <LinearLayout
            android:id="@+id/dynamic_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_5"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>