<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/offers_cardview"
    style="@style/carview_style"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimens_10"
    app:cardCornerRadius="@dimen/dimens_3">

    <RelativeLayout
        android:id="@+id/rl_offers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_3">

        <LinearLayout
            android:id="@+id/ll_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/image_product"
                style="@style/product_image_style"
                android:layout_width="@dimen/dimens_170"
                android:layout_height="@dimen/dimens_110"
                android:layout_margin="@dimen/dimens_5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/product_name"
                style="@style/product_name__style"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/dimens_1"
                android:layout_marginTop="@dimen/dimens_20"
                android:layout_marginStart="@dimen/dimens_3"
                android:fontFamily="@font/calibree_bold"
                android:text="@string/text_offers"
                android:textSize="@dimen/text_20" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_product_price"
                style="@style/product_name__style"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/dimens_1"
                android:layout_marginStart="@dimen/dimens_3"
                android:fontFamily="@font/calibree_bold"
                android:text="@string/text_offers_price"
                android:textSize="@dimen/text_20" />
        </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_details"
            style="@style/product_name__style"
            android:layout_below="@+id/ll_image"
            android:layout_margin="@dimen/dimens_10"
            android:fontFamily="@font/calibree_medium"
            android:maxLines="4"
            android:text="@string/text_offers_description"
            android:textSize="@dimen/text_18" />

    </RelativeLayout>


</android.support.v7.widget.CardView>