<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_shop"
    style="@style/carview_style"
    app:cardCornerRadius="@dimen/dimens_5"
    android:layout_margin="@dimen/dimens_3"
    app:cardBackgroundColor="@color/app_txt_white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_fruits"
            android:layout_width="@dimen/dimens_100"
            android:layout_height="@dimen/dimens_80"
            android:padding="@dimen/dimens_15"
            android:scaleType="fitXY"
          />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_cate_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_15"
            android:layout_toEndOf="@id/iv_fruits"
            android:fontFamily="@font/calibree_medium"
            android:maxLines="1"
            android:textColor="@color/color_header_text_gray"
            android:textSize="@dimen/text_18" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_cate_name"
            android:layout_marginTop="@dimen/dimens_5"
            android:layout_toEndOf="@id/iv_fruits"
            android:layout_marginEnd="@dimen/dimens_30"
            android:fontFamily="@font/calibree_medium"
            android:maxLines="3"
            android:textColor="@color/color_gray"
            android:textSize="@dimen/text_14" />

       <!-- <View
            android:id="@+id/view_divider"
            android:layout_width="@dimen/dimens_1"
            android:layout_height="@dimen/dimens_90"
            android:layout_toStartOf="@+id/iv_arrow"
            android:background="@color/view_color_gray"
            android:padding="10dp">

        </View>-->

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_arrow"
            android:layout_width="@dimen/dimens_25"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_right_arrow" />

    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_sub_category"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</android.support.v7.widget.CardView>

