<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimens_2"
    android:background="@color/color_layout_bg"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/order_details_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_5"
        app:cardBackgroundColor="@color/app_txt_white"
        app:cardElevation="@dimen/dimens_5">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimens_10"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_orderidd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibree_medium"
                    android:lines="1"
                    android:text="@string/order_id"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_20" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_ordersum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/tv_orderidd"
                    android:fontFamily="@font/calibree_medium"
                    android:lines="1"
                    android:text="@string/order_num"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_20" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_5"
                    android:fontFamily="@font/calibree_medium"
                    android:lines="1"
                    android:text="@string/placed_on"
                    android:textColor="@color/color_adress_text"
                    android:textSize="@dimen/text_14" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_place_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimens_5"
                    android:layout_marginTop="@dimen/dimens_5"
                    android:fontFamily="@font/calibree_medium"
                    android:lines="1"
                    android:text="@string/placed_on"
                    android:textColor="@color/color_adress_text"
                    android:textSize="@dimen/text_14" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_delivered_on"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_5"
                    android:fontFamily="@font/calibree_medium"
                    android:lines="1"
                    android:text="@string/delivered_on"
                    android:textColor="@color/color_adress_text"
                    android:textSize="@dimen/text_14" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_delivered_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimens_5"
                    android:layout_marginTop="@dimen/dimens_5"
                    android:fontFamily="@font/calibree_medium"
                    android:lines="1"
                    android:text="@string/placed_on"
                    android:textColor="@color/color_adress_text"
                    android:textSize="@dimen/text_14" />
            </LinearLayout>


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_shipping_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_5"
                android:fontFamily="@font/calibree_bold"
                android:lines="1"
                android:text="@string/shipping_adress"
                android:textColor="@color/light_black"
                android:textSize="@dimen/text_14" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_add_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_5"
                android:ellipsize="end"
                android:fontFamily="@font/calibree_medium"
                android:lines="1"
                android:text="@string/no_72_address"
                android:textColor="@color/color_adress_text"
                android:textSize="@dimen/text_14" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_order_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_5"
                    android:fontFamily="@font/calibree_bold"
                    android:lines="1"
                    android:text="@string/order_summary"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_14" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_ordertotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_5"
                    android:layout_toEndOf="@+id/tv_order_summary"
                    android:layout_marginStart="@dimen/dimens_15"
                    android:fontFamily="@font/calibree_medium"
                    android:lines="1"
                    android:text="@string/total_amount"
                    android:textColor="@color/color_adress_text"
                    android:textSize="@dimen/text_14" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_mrp_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_5"
                    android:layout_toRightOf="@+id/tv_ordertotal"
                    android:fontFamily="@font/calibree_medium"
                    android:text="@string/product_price_text"
                    android:textColor="@color/color_adress_text" />

                <RelativeLayout
                    android:id="@+id/rl_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tv_order_summary"
                    android:visibility="visible">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/calibree_bold"
                        android:lines="1"
                        android:text="@string/status"
                        android:textColor="@color/color_text_gray"
                        android:textSize="@dimen/text_14" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_order_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv1"
                        android:layout_marginStart="@dimen/dimens_55"
                        android:fontFamily="@font/calibree_medium"
                        android:text="@string/transist"
                        android:textSize="@dimen/text_14"
                        android:textColor="@color/color_adress_text" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_pay_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/rl_status"
                    android:visibility="visible">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_p_m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/calibree_bold"
                        android:lines="1"
                        android:text="@string/payment_mode"
                        android:textColor="@color/color_text_gray"
                        android:textSize="@dimen/text_14" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_payment_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_p_m"
                        android:layout_marginStart="@dimen/dimens_15"
                        android:fontFamily="@font/calibree_medium"
                        android:text="@string/cash_on_del"
                        android:textSize="@dimen/text_14"
                        android:textColor="@color/color_adress_text" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv__order_detail_delivery"
        style="@style/recyclerView_vertical_style"
        tools:listitem="@layout/adapter_order_list" />

</LinearLayout>