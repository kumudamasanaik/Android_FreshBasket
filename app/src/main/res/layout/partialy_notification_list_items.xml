<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimens_5"
    app:cardBackgroundColor="@color/cardview_light_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_80"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimens_10"
        android:background="@color/app_txt_white"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_delivery_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dimens_10"
            android:fontFamily="@font/calibree_bold"
            android:paddingBottom="@dimen/dimens_10"
            android:text="@string/text_date"
            android:textColor="@color/color_text_gray"
            android:textSize="@dimen/text_14" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_delivery_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/tv_delivery_date"
            android:layout_marginStart="@dimen/dimens_5"
            android:maxLines="2"
            android:text="@string/express_delivery"
            android:textColor="@color/color_text_gray"
            android:textSize="@dimen/text_18" />
    </RelativeLayout>
</android.support.v7.widget.CardView>