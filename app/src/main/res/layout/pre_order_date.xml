<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_5"
        android:background="@color/app_txt_white"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_10"
            android:fontFamily="@font/calibree_medium"
            android:text="@string/pre_order"
            android:textColor="@color/app_text_blck"
            android:textSize="@dimen/text_25" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_20"
            android:layout_marginLeft="@dimen/dimens_15"
            android:layout_marginRight="@dimen/dimens_15"
            android:fontFamily="@font/calibree_medium"
            android:text="@string/delivery_date"
            android:textColor="@color/color_gray"
            android:textSize="@dimen/text_18" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_5"
            android:layout_marginRight="@dimen/dimens_16"
            android:layout_marginLeft="@dimen/dimens_16"
            android:background="@drawable/bg_text_border"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_calender_text"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimens_40"
                android:layout_weight="1"
                android:fontFamily="@font/calibree_medium"
                android:gravity="center"
                android:padding="@dimen/dimens_5"
                android:text="@string/november_30_2017"
                android:textColor="@color/color_date_gray"
                android:textSize="@dimen/text_20" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/dimens_25"
                android:layout_gravity="center"
                android:background="@color/view_color_gray" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_calender"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimens_40"
                android:layout_gravity="end"
                android:layout_weight=".4"
                android:padding="@dimen/dimens_8"
                app:srcCompat="@drawable/ic_date_range" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_pre_order_check_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimens_10"
            android:layout_marginTop="@dimen/dimens_20"
            android:fontFamily="@font/calibree_medium"
            android:gravity="end"
            android:layout_marginEnd="@dimen/dimens_10"
            android:text="@string/check_out"
            android:textColor="@color/color_light_blue"
            android:textSize="@dimen/text_18" />
    </LinearLayout>
</LinearLayout>

