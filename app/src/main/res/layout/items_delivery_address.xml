<?xml version="1.0" encoding="UTF-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/address_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimens_2"
    app:cardCornerRadius="@dimen/dimens_5"
    app:cardBackgroundColor="@color/app_txt_white"
    app:cardElevation="@dimen/dimens_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_address_selection"
        android:background="@color/app_txt_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/rb_image"
                android:layout_width="@dimen/dimens_20"
                android:layout_height="@dimen/dimens_20"
                android:layout_marginStart="@dimen/dimens_7"
                android:layout_marginTop="@dimen/dimens_10"
                app:srcCompat="@drawable/ic_radio_button_off" />

            <LinearLayout
                android:id="@+id/layout_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/rb_image"
                android:layout_toRightOf="@+id/rb_image"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dimens_10"
                    android:orientation="horizontal">


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_nameadd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_10"
                        android:layout_weight="1"
                        android:fontFamily="@font/calibree_medium"
                        android:text="@string/address_text"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/text_18" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/iv_exit"
                        android:layout_width="@dimen/dimens_18"
                        android:layout_height="@dimen/dimens_18"
                        android:layout_marginEnd="@dimen/dimens_10"
                        app:srcCompat="@drawable/ic_close" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dimens_5"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_address"
                        style="@style/delivery_adress_textview"
                        android:layout_marginStart="@dimen/dimens_10"
                        android:lines="3"
                        android:text="@string/no_72_address" />
                </LinearLayout>

                <View
                    android:id="@+id/view_seperator"
                    style="@style/delivery_view_separator_style"
                    android:layout_marginEnd="@dimen/dimens_10"
                    android:layout_marginStart="@dimen/dimens_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimens_10"
                        android:layout_marginStart="@dimen/dimens_10"
                        android:layout_marginTop="@dimen/dimens_10"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/dimens_5"
                        android:drawableStart="@drawable/ic_edit"
                        android:fontFamily="@font/calibree_medium"
                        android:text="@string/edit_text"
                        android:textColor="@color/color_light_gray"
                        android:textSize="@dimen/text_14" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_default"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimens_10"
                        android:layout_marginEnd="@dimen/dimens_20"
                        android:layout_marginTop="@dimen/dimens_10"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/dimens_6"
                        android:drawableStart="@drawable/ic_home"
                        android:ellipsize="end"
                        android:fontFamily="@font/calibree_medium"
                        android:maxLines="1"
                        android:text="@string/set_as_default"
                        android:textColor="@color/color_light_gray"
                        android:textSize="@dimen/text_14" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>