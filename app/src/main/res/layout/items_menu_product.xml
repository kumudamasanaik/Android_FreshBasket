<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/dimens_150"
        android:layout_height="@dimen/dimens_150"
        app:cardBackgroundColor="@color/app_txt_white"
        app:cardCornerRadius="2dp"
        app:cardElevation="1dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_grid_image"
            android:layout_width="@dimen/dimens_130"
            android:layout_height="@dimen/dimens_100"
            android:layout_gravity="center"
            android:background="@color/app_txt_white"
            android:contentDescription="@string/app_name"
            android:src="@drawable/dummy_product" />

        <TextView
            android:id="@+id/tv_grid_product"
            style="@style/grid_view_item_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fruits_vegetables" />

    </android.support.v7.widget.CardView>
