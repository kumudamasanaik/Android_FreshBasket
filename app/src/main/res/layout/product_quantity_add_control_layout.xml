<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimens_70"
    android:layout_height="@dimen/dimens_30"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_quantityView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_quantity_border"
        android:visibility="visible">


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_count_decrease"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_20"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:fontFamily="@font/calibree_medium"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/add_to_cart"
            android:textColor="@color/app_txt_white"
            android:textSize="@dimen/text_14"
            android:visibility="visible" />

    </LinearLayout>
</RelativeLayout>