<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.coupon.CouponActivity">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_available_coupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/dimens_10"
        android:text="@string/available_coupon"
        android:textColor="@color/button_text_color"
        android:textSize="@dimen/text_18" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_coupon"
        style="@style/recyclerview_Style"
        android:layout_margin="@dimen/dimens_2"
        android:layout_below="@+id/tv_available_coupon"
        android:visibility="visible"
        tools:listitem="@layout/items_coupon_list" />

</RelativeLayout>