<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/partial_smartbasket_cardview"
    style="@style/carview_style"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/dimens_0"
    android:layout_margin="@dimen/dimens_5"
    app:cardBackgroundColor="@color/window_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dimens_10">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_product"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/calibree_medium"
                android:gravity="center"
                android:text="@string/products_smart_basket"
                android:textColor="@color/color_black"
                android:textSize="@dimen/dimens_16" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_products_qty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/calibree_medium"
                android:gravity="center"
                android:text="@string/product_qty"
                android:textColor="@color/color_black"
                android:textSize="@dimen/dimens_16" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_products_unit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/calibree_medium"
                android:gravity="center"
                android:text="@string/product_unit"
                android:textColor="@color/color_black"
                android:textSize="@dimen/dimens_16" />
        </LinearLayout>

        <View
            android:id="@+id/view_smart_basket"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_1"
            android:layout_marginBottom="@dimen/dimens_5"
            android:background="@color/color_light_gray" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_product_list"
            style="@style/recyclerview_Style"
            android:layout_margin="@dimen/dimens_5"
            tools:listitem="@layout/recyclerview_smart_basket_items" />

    </LinearLayout>

</android.support.v7.widget.CardView>