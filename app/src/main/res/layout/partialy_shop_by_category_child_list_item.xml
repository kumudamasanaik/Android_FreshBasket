<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_1"
        android:background="@color/view_color_gray"
        android:padding="10dp"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_child_cat_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/calibree_medium"
        android:maxLines="1"
        android:padding="@dimen/dimens_10"
        android:text="@string/fruits_vegetables"
        android:textColor="@color/color_header_text_gray"
        android:textSize="@dimen/text_16" />

</LinearLayout>

