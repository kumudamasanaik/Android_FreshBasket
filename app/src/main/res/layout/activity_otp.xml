<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimens_10"
        android:layout_marginRight="@dimen/dimens_10"
        android:orientation="vertical"
        android:background="@color/app_txt_white">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_verification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_10"
            android:text="@string/verifiy_query"
            android:maxLines="2"
            android:textColor="@color/color_adress_text"
            android:layout_marginTop="@dimen/dimens_15"
            android:textSize="@dimen/text_18"
            android:fontFamily="@font/calibree_medium"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_10"
            android:layout_marginTop="@dimen/dimens_15"
            android:theme="@style/text_input_layout_style"
          >
            <android.support.design.widget.TextInputEditText
                android:id="@+id/tv_enter_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/otp_hint"
                android:textSize="@dimen/text_18"
                android:maxLength="4"
                android:fontFamily="@font/calibree_medium"
                android:textColorHint="@color/color_gray"
                android:textColor="@color/color_black"
                android:inputType="number"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_resend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/resend"
            android:textColor="@color/color_resend_text"
            android:layout_marginTop="@dimen/dimens_10"
            android:layout_marginLeft="@dimen/dimens_13"
            android:textSize="@dimen/text_18"
            android:fontFamily="@font/calibree_bold"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_50"
        android:background="@color/color_light_blue"
        android:layout_alignParentBottom="true">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_ver_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimens_10"
            android:text="@string/verify_text_otp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:fontFamily="@font/calibree_bold"
            android:textColor="@color/app_txt_white"
            android:textSize="@dimen/text_14"/>
        <!--android:drawableRight="@drawable/ic_right_arrow"
-->


    </RelativeLayout>



</RelativeLayout>