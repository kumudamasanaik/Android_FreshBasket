<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_txt_white"
    tools:context=".screens.faq.FaqActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimens_10"
        android:layout_marginStart="@dimen/dimens_10"
        android:layout_marginTop="@dimen/dimens_8"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimens_10"
        android:layout_marginStart="@dimen/dimens_10"
        android:layout_marginTop="@dimen/dimens_10"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_faq_text_num"
            android:layout_width="@dimen/dimens_20"
            android:layout_height="@dimen/dimens_20"
            android:textSize="@dimen/text_20"
             />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_faq_text"
            style="@style/faq_que_style"
            android:text="@string/_1_what_is_lorem_ipsum" />

    </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_faq_subtxt"
            style="@style/faq_ans_style"
            android:layout_marginStart="@dimen/dimens_30"
            android:text="@string/sub_text" />


    </LinearLayout>
</RelativeLayout>