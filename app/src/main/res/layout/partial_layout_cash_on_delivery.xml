<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_COD"
    style="@style/payment_cardView_style"
    app:cardBackgroundColor="@color/cardview_light_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_payment_type"
            style="@style/payment_selection_header_style"
            android:layout_marginEnd="@dimen/dimens_25"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dimens_25"
            android:textColor="@color/app_text_blck" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_payment_type_image"
            android:layout_width="@dimen/dimens_25"
            android:layout_height="@dimen/dimens_25"
            android:layout_gravity="end|center"
            android:layout_marginEnd="@dimen/dimens_10"
            app:srcCompat="@drawable/ic_payment_cash_on_delivery" />

    </LinearLayout>
</android.support.v7.widget.CardView>

