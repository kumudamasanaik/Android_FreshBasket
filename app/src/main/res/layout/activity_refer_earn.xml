<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer"
        android:layout_marginEnd="@dimen/dimens_10"
        android:layout_marginStart="@dimen/dimens_10"
        android:layout_marginTop="@dimen/dimens_5"
        app:cardBackgroundColor="@color/cardview_light_background">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/footer"
            android:layout_marginTop="@dimen/dimens_10"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_20"
                    android:fontFamily="@font/calibree_medium"
                    android:gravity="center"
                    android:text="@string/refer_your_friends_earn"
                    android:textColor="@color/color_text_gray"
                    android:textSize="@dimen/text_25" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_referral_icon"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_150"
                    app:srcCompat="@drawable/refer_earn_bg" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_share_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_5"
                    android:layout_marginStart="@dimen/dimens_20"
                    android:layout_marginEnd="@dimen/dimens_20"
                    android:ellipsize="end"
                    android:fontFamily="@font/calibree_medium"
                    android:gravity="center"
                    android:lines="3"
                    android:text="@string/referral"
                    android:textColor="@color/color_header_text_gray"
                    android:textSize="@dimen/text_18" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_25"
                    android:fontFamily="@font/calibree_medium"
                    android:gravity="center"
                    android:text="@string/your_referral_code"
                    android:textColor="@color/color_header_text_gray"
                    android:textSize="@dimen/text_18" />


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_referral_code"
                    android:layout_width="@dimen/dimens_200"
                    android:layout_height="@dimen/dimens_60"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dimens_30"
                    android:layout_marginTop="@dimen/dimens_35"
                    android:background="@color/color_yash"
                    android:fontFamily="@font/calibree_medium"
                    android:gravity="center"
                    android:padding="@dimen/dimens_2"
                    android:text="@string/sj12e3er3"
                    android:textColor="@color/color_light_blue"
                    android:textSize="@dimen/text_30" />


            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>


    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_50"
        android:layout_alignParentBottom="true"
        android:background="@color/color_light_blue">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_ver_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/dimens_5"
            android:fontFamily="@font/calibree_bold"
            android:gravity="center"
            android:text="@string/share_now"
            android:textColor="@color/app_txt_white"
            android:textSize="@dimen/text_18" />
        <!-- android:drawableEnd="@drawable/ic_share_blue"-->
    </RelativeLayout>
</RelativeLayout>