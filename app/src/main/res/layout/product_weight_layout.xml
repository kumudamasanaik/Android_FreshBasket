<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_weigh_control"
    android:layout_width="@dimen/dimens_125"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/bg_text_border">


    <TextView
        android:id="@+id/tv_sku"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="@dimen/dimens_2"
        android:paddingRight="@dimen/dimens_2"
        android:text="@string/product_item_wght"
        android:textColor="@color/color_text_gray"
        android:textSize="@dimen/text_14" />


    <TextView
        android:id="@+id/tv_changewiehgt"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimens_20"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:background="@drawable/ic_arrow_drop_down_black"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:paddingStart="@dimen/dimens_5"
        android:paddingEnd="@dimen/dimens_5"
        android:textColor="@color/color_text_gray"
        android:textSize="@dimen/text_14" />

</LinearLayout>