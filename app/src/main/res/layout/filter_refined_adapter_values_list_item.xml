<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens_40"
    android:layout_marginTop="@dimen/dimens_2"
    android:gravity="center"
    android:id="@+id/sort_layout_item">

    <TextView
        android:id="@+id/txt_item_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/calibree_medium"
        android:padding="@dimen/dimens_10"
       android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:text="@string/filtered_name"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/dimens_11sp" />


    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/cb_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dimens_2"
        android:layout_marginStart="@dimen/dimens_10"
        android:buttonTint="@color/colorPrimary"
        android:ellipsize="end"
        android:gravity="right|center"
        android:padding="@dimen/dimens_10"
        android:visibility="visible" />

    <View
        style="@style/view_divider"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true" />

</RelativeLayout>