<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/empty_view_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimens_12"
    android:paddingTop="@dimen/multistate_view_top_padding"
    android:paddingRight="@dimen/dimens_12"
    android:paddingBottom="@dimen/dimens_12">

    <ImageView
        android:id="@+id/empty_imageView"
        android:layout_width="@dimen/dimens_200"
        android:layout_height="@dimen/dimens_100"
        android:layout_marginBottom="@dimen/dimens_30"
        android:adjustViewBounds="true"
        android:fitsSystemWindows="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/keep_cart_logo" />

    <TextView
        android:id="@+id/error_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_5"
        android:fontFamily="@font/calibree_bold"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier="1.1"
        android:padding="@dimen/dimens_8"
        android:text="@string/no_result_found"
        android:textColor="@color/md_black_1000"
        android:textSize="@dimen/dimens_12sp" />

    <Button
        android:id="@+id/empty_button"
        style="@style/login_btn"
        android:layout_width="@dimen/dimens_160"
        android:layout_height="@dimen/dimens_40"
        android:layout_marginTop="@dimen/dimens_14"
        android:fontFamily="@font/calibree_bold"
        android:text="@string/retry"
        android:textSize="@dimen/dimens_10sp" />

</LinearLayout>